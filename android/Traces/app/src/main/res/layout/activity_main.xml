<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="20dp"
        sothree:umanoFadeColor="#ffffff">

        <!-- MAIN CONTENT -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:id="@+id/jsonParsed"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </FrameLayout>

        <!-- SLIDING LAYOUT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" >

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="25dp"
                android:columnCount="2"
                android:rowCount="4"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/addressLabel"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:paddingTop="10dp"
                    android:text="Address"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/addressText"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Default Address"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/fromDateLabel"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:paddingTop="10dp"
                    android:text="From Date"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/fromDateText"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Default Date"
                    android:textSize="15dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/untilDateLabel"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:paddingTop="10dp"
                    android:text="Until Date"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/untilDateText"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Default Date"
                    android:textSize="15dp"
                    android:visibility="visible"/>


                <TextView
                    android:id="@+id/radiusLabel"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:paddingTop="10dp"
                    android:text="Radius"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/radiusText"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Default Radius"
                    android:textSize="15dp"
                    android:visibility="visible" />


            </GridLayout>
        </RelativeLayout>


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>
